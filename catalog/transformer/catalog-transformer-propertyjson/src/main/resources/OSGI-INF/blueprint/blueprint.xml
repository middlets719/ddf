<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference-list id="injectableAttributes" interface="ddf.catalog.data.InjectableAttribute"
                    availability="optional"/>

    <reference id="attributeRegistry" interface="ddf.catalog.data.AttributeRegistry" availability="optional"/>

    <reference id="defaultMetacardType" interface="ddf.catalog.data.MetacardType" filter="(name=fallback.common)"/>

    <reference-list id="allMetacardTypes" interface="ddf.catalog.data.MetacardType" member-type="service-object">
        <reference-listener ref="transformer" bind-method="addMetacardType"
                            unbind-method="removeMetacardType"/>
    </reference-list>

    <bean id="transformer"
          class="ddf.catalog.transformer.input.propertyjson.PropertyJsonInputTransformer">
        <argument ref="defaultMetacardType"/>
        <argument ref="injectableAttributes"/>
        <argument ref="attributeRegistry"/>
    </bean>

    <service ref="transformer" interface="ddf.catalog.transform.InputTransformer">
        <service-properties>
            <entry key="id" value="input-propertyjson"/>
            <entry key="mime-type" value="application/json"/>
        </service-properties>
    </service>

</blueprint>